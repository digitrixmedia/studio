rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function userOutlet() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.outletId;
    }

    // USERS
    match /users/{userId} {

      // Any staff/admin can read users from THEIR outlet only
      allow get: if isSignedIn() &&
        resource.data.outletId == userOutlet();

      allow list: if isSignedIn() &&
        request.query.where.outletId == userOutlet();

      // Admin can create users in their outlet
      allow create: if isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
        request.resource.data.outletId == userOutlet();

      // Admin can update/delete users in their outlet
      allow update, delete: if isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
        resource.data.outletId == userOutlet();

      // Users can update their own profile
      allow update: if isSignedIn() && request.auth.uid == userId;
    }

    // OUTLETS
    match /outlets/{outletId} {

      allow read: if isSignedIn();

      allow update: if isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Settings subcollection
      match /settings/{settingId} {
        allow read: if isSignedIn() && outletId == userOutlet();
        allow write: if isSignedIn() &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
          outletId == userOutlet();
      }

      // ALL other outlet subcollections
      match /{sub=**} {
        allow read, write: if isSignedIn() && outletId == userOutlet();
      }
    }
  }
}
