
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().role == 'admin';
    }

    /********** USERS **********/
    match /users/{userId} {
      // Any user can read/update their own profile
      allow read, update: if isOwner(userId);
      
      // Admins can manage users within their own outlet
      allow create: if isAdmin() && request.resource.data.outletId == getUserData().outletId;
      allow read, update, delete: if isAdmin() && get(/databases/$(database)/documents/users/$(userId)).data.outletId == getUserData().outletId;
      
      // Allow any authenticated user to list users only if they are querying for their own outlet
      allow list: if isSignedIn() && request.query.where.outletId == getUserData().outletId;
    }

    /********** OUTLETS **********/
    match /outlets/{outletId} {
      // Admins and their staff can read their own outlet doc.
      allow read: if isSignedIn() && getUserData().outletId == outletId;
      
      // Franchise owner can update their own outlet document.
      allow update: if isAdmin() && getUserData().outletId == outletId;

      // Rule for all subcollections within an outlet
      match /{subcollection}/{docId=**} {
         // Any user (cashier, waiter, manager) who belongs to the outlet can read/write data within it.
         allow read, write: if isSignedIn() && getUserData().outletId == outletId;
      }
    }
  }
}
